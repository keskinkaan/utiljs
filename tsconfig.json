{
	"schema": "https://json.schemastore.org/tsconfig",
	"_version": "21.0.0",

	"compilerOptions": {
		/* Language and Environment */
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"target": "ES2016",

		/* Modules */
		"module": "CommonJS",
		// "moduleResolution": "Node16",

		/* Emit */
		"outDir": "./dist",
		"noEmit": true,

		/* Type Checking */
		"strict": true,

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Completeness */
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "jest.config.ts", "commitlint.config.ts"],
	"exclude": ["node_modules", "dist"]
}
